<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nurlanov.ps_app.BlankFragment">

    <TextView
        android:id="@+id/Reg_text"
        android:layout_width="185dp"
        android:layout_height="42dp"
        android:text="Регистрация"
        android:textSize="30dp"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/reg_arend_name"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Название PS"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/Reg_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/reg_arend_pass"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Пароль"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/reg_arend_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/reg_arend_pass_rep"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Повторить пароль"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/reg_arend_pass"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/reg_arend_mesta"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Количество PS"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/reg_arend_pass_rep"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/reg_arend_address"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Адрес"
        android:inputType="textPostalAddress"
        app:layout_constraintTop_toBottomOf="@+id/reg_arend_mesta"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/reg_arend_submit"
        android:layout_width="135dp"
        android:layout_height="40dp"
        android:text="Подвердить"
        app:layout_constraintTop_toBottomOf="@+id/reg_arend_address"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"/>
</android.support.constraint.ConstraintLayout>
