<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nurlanov.ps_app.BlankFragment">

    <Button
        android:id="@+id/arendator"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginBottom="130dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:text="Партнер"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/client"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:text="Клиент"
        app:layout_constraintLeft_toLeftOf="@id/arendator"
        app:layout_constraintRight_toRightOf="@id/arendator"
        app:layout_constraintTop_toBottomOf="@id/arendator" />

</android.support.constraint.ConstraintLayout>
